<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_bg_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/bg_game_level_finish">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="187dp"
            android:text="合成一个大西瓜 获得"
            android:textColor="#6A2915"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tv_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="继续游戏还可获得更多金币!"
            android:textColor="#6A2915"
            android:textSize="14dp" />


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_tips"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/iv_no_ad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:src="@mipmap/bg_game_level_finish_noad" />

            <RelativeLayout
                android:id="@+id/rl_ad_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="15dp" />
        </FrameLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_close"
        android:layout_width="26.5dp"
        android:layout_height="26.5dp"
        android:layout_alignRight="@id/rl_bg_content"
        android:layout_marginTop="100dp"
        android:background="@drawable/bg_dialog_close"
        android:gravity="center"
        android:text="X"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv_button_double"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_bg_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@mipmap/bg_btn_game_level_finish"
        android:gravity="center"
        android:text="双倍奖励"
        android:textColor="#D23201"
        android:textSize="17dp" />
</RelativeLayout>