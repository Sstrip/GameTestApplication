<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/head_click_function" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_head"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="17dp"
        android:text="消除最小水果"
        android:textColor="#FFFFFF"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/iv_head"
        android:layout_alignBottom="@id/iv_head"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="17dp"
        android:background="@drawable/bg_dialog_close_no_time"
        android:gravity="center" />

    <View
        android:id="@+id/view_space_one"
        android:layout_width="296dp"
        android:layout_height="10dp"
        android:layout_marginTop="-5dp"
        android:layout_below="@id/iv_head"
        android:layout_centerHorizontal="true"
        android:background="#FFFFFF" />

    <RelativeLayout
        android:id="@+id/rl_ad_content"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_space_one"
        android:layout_centerHorizontal="true"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/iv_no_ad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/bg_function_cick_noad" />
    </RelativeLayout>

    <View
        android:id="@+id/view_space"
        android:layout_width="296dp"
        android:layout_height="10dp"
        android:layout_below="@id/rl_ad_content"
        android:layout_centerHorizontal="true"
        android:background="#FFFFFF" />
</RelativeLayout>