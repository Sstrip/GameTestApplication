<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_red_package"
            android:layout_width="105dp"
            android:layout_height="140dp"
            android:background="@mipmap/icon_red_package_lock" />

        <TextView
            android:id="@+id/tv_unlock_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="未解锁"
            android:textColor="#fff575" />

        <ImageView
            android:id="@+id/iv_icon_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_unlock_tips"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@mipmap/icon_red_package_open" />

        <TextView
            android:id="@+id/tv_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_icon_open"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="未领取"
            android:textColor="#f9e2ae" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_has_get_coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_red_package_lock"
            android:layout_width="105dp"
            android:layout_height="140dp"
            android:background="@mipmap/icon_red_package_unlock" />

        <TextView
            android:id="@+id/tv_coin_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="金币"
            android:textColor="#bf873a" />

        <TextView
            android:id="@+id/tv_coin_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_coin_tips"
            android:layout_centerHorizontal="true"
            android:text="522"
            android:textColor="#bf873a"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_has_get"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_coin_count"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="已领取"
            android:textColor="#f9e2ae" />
    </RelativeLayout>


</RelativeLayout>